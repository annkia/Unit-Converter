<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ania.myfirstapplication.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="71dp"
        android:background="#DCEDC8"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:text="Length Unit Converter"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"

                android:background="#00796B"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:fontFamily="monospace"
                android:layout_weight="1"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"


                >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Km"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="174dp"
                    android:fontFamily="monospace"
                    android:layout_weight="1"


                    />
                <EditText
                    android:id="@+id/editTextKm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="100dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="129dp"
                    tools:layout_editor_absoluteY="160dp"
                    android:fontFamily="monospace"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"


                    />


                <Button
                    android:id="@+id/ButtonConvKmToMiles"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Convert Km To Miles"
                    android:layout_below="@+id/ButtonConvMilesToKm"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    tools:layout_editor_absoluteX="128dp"
                    tools:layout_editor_absoluteY="323dp"
                    android:background="#BDBDBD"
                    android:fontFamily="monospace"
                    android:padding="20dp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"


                >
